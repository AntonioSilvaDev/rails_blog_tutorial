<div class="p-2 mb-1 border rounded">
  <p class="mb-0">
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p class="mb-0">
    <%= link_to "Delete Comment", [comment.article, comment],
                    method: :delete,
                    data: { confirm: 'Are you sure'} %>
  </p>
</div>